<center> <h1> To Do List</h1></center>
<hr />
<% if @lists.any? %>


  <table style="width:50%">

    <tr>
      <th>Task</th>
      <th>Completed</th> 
      <th> Priority </th>
      <th> Delete </th>
    </tr>
    <tr> <% @lists.each do |list| %>
      <td>  
   <center> <h4> <%= link_to list.title, list_path(list) %> </h4> </center>
    </td>
      <td> 
      <center> <h4> <%= list.complete ? ' ⚫️  ' : ' ⚪️ '  %> </h4> </center>
      <td> 

      </td>
       <td>
      <center> <%= link_to '❌ ', list_path(list) , method: :delete, data: {confirm: 'Are you sure you want to delete?'}   %>  </center>
       </td>
    </tr>
     <% end %> 
  </table>


<% else %>
  <h4> You have no tasks yet. Create a new one.</h4>
<% end %>

