<h1>New Task</h1>


<%= form_for @list do |f| %>
  <%= f.label :task %>
  <%= f.text_field :title, required: true %>  
  <br />
  <%= f.label :complete %>
  <%= f.check_box :complete %>
  <br />
  <%= f.select :priority, options_for_select(%w[not-important important very-important]) %>
  <br />
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br />
  <%= f.submit 'Add New Task' %>
<% end %>


<%= link_to 'Back to All Tasks', lists_path %>